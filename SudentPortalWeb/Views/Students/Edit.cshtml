@{
}


@model SudentPortalWeb.Models.Entities.Student

@if (Model is null)
{
    <p>Student is not found</p>
}
else
{

    <h1>Edit Student</h1>
    <form method="post">
        <div class="mt-3">
            <label class="form-label">ID</label>
            <input type="text" class="form-control" asp-for="Id" readonly />
        </div>
        <div class="mt-3">
            <label class="form-label">Name</label>
            <input type="text" class="form-control" asp-for="Name" />
        </div>
        <div class="mt-3">
            <label class="form-label">Email</label>
            <input type="email" class="form-control" asp-for="Email" />
        </div>
        <div class="mt-3">
            <label class="form-label">Phone</label>
            <input type="text" class="form-control" asp-for="Phone" />
        </div>
        <div class="mt-3">
            <input type="checkbox" class="form-check-input" id="Subscribed" asp-for="Subscribed" />
            <label class="form-check-label" for="Subscribed">Subscribed</label>
        </div>
        <div class="mt-3">
            <button type="submit" class="btn btn-outline-primary">Save</button>
            <button class="btn btn-danger" asp-controller="Students" asp-action="Delete" asp-route-id="Id">Delete</button>
        </div>
    </form>

}
